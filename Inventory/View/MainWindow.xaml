<Window x:Class="Inventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory"
        xmlns:viewModels="clr-namespace:Inventory.ViewModels"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" FontSize="13" FontFamily="Verdana" Padding="4">
            <MenuItem Header="Файл">

            </MenuItem>
            <MenuItem Header="Выдачи компьютеров" >

            </MenuItem>
            <MenuItem Header="Выдачи периферии">

            </MenuItem>
            <MenuItem Header="Сотрудники"
                      Command="{Binding OpenPageEmloyees}" >

            </MenuItem>
            <MenuItem Header="Компьютеры"
                      Command="{Binding OpenPageComputers}" >

            </MenuItem>
            <MenuItem Header="Периферия">

            </MenuItem>
        </Menu>
        <Frame Grid.Row="1" 
               Content="{Binding CurrentPage}" 
               NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
