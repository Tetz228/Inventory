<Window
    x:Class="Inventory.View.PasswordRecoveryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inventory.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Inventory.ViewModels"
    xmlns:recoveryPassword="clr-namespace:Inventory.ViewModels.Recovery__password"
    Name="PasswordRecovery"
    Title="Восстановление пароля"
    Width="380"
    Height="230"
    Loaded="{DXEvent Handler='Window_Loaded(@sender, @args)'}"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Window.DataContext>
        <recoveryPassword:PasswordRecoveryViewModel />
    </Window.DataContext>

    <Frame Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" />
</Window>
